{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "rootDir": "./src",
    "outDir": "./build",
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": ["./src/**/*.ts"]
}
